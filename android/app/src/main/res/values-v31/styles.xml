<resources>

    <style name="Widget.WidgetApp.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_background</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="Widget.WidgetApp.AppWidget.InnerView" parent="android:Widget">
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_inner_view_background</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="MyWidgetTheme" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/my_widget_background</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="MyWidgetInnerTheme" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/my_widget_inner_background</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:textColor">@color/backGround</item>
    </style>

</resources>